<h1>Eat - Da - Burger!</h1>

<ul>
    {{#each burger}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Devoured ?</label><br>
        <input type="radio" name="yes" value="1" checked> Yes!<br>
        <input type="radio" name="no" value="0"> No
    </div>

    <button type="submit">Add Burger</button>
</form>